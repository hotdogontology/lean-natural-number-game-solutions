induction c with k hk generalizing b,

rw mul_zero a,
intro h,
rw mul_eq_zero_iff at h,
cases h with a b,
exfalso,
exact ha(a),
exact b,

intro h,
cases b,
rw mul_zero at h,
symmetry at h,
rw mul_eq_zero_iff at h,
cases h,
exfalso,
exact ha(h),
symmetry at h,
exact h,

apply succ_eq_succ_of_eq,
rw mul_succ at h,
rw mul_succ at h,
rw add_right_cancel_iff at h,
apply hk,
exact h,
